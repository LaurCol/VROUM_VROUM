{% extends 'base.html.twig' %}

{% block title %}Détails du produit{% endblock %}

{% block body %}
<div class="slideshow">
    <div class="container opacity">
        <div class="annonce-title" style=" width:100%; height:100%;">
           <span class="spanshow"> <h1>{{ occasions.marque }} - {{occasions.modele}}</h1>
